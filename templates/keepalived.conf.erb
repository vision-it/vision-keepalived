# This file is managed by Puppet
vrrp_instance VI_1 {
    state MASTER
    interface <%= @interface %>
    virtual_router_id 51
    priority 100
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass <%= @auth_pass %>
    }
    virtual_ipaddress {
         <%= @vrt_ip_address %> dev <%= @interface %>
    }
}